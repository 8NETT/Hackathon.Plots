{
  "ConnectionStrings": {
    "Database": "Server=(localdb)\\MSSQLLocalDB;Database=Hackathon.Plots;Integrated Security=true;TrustServerCertificate=true",
    "EventHub": "",
    "ApplicationInsights": ""
  },
  "Security": {
    "PasswordHashing": {
      "BCrypt": {
        "WorkFactor": 12
      }
    },
    "Authentication": {
      "Jwt": {
        "Issuer": "Hackathon.Users",
        "Audience": "hackathon-api",
        "Key": ""
      }
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "Enrich": [ "FromLogContext" ],
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day"
        }
      }
    ],
    "Properties": {
      "Application": "Hackathon.Users"
    }
  }
}